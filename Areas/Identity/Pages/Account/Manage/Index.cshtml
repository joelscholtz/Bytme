@page
@model IndexModel
@inject SignInManager<UserModel> SignInManager
@inject UserManager<UserModel> userManager
@using Microsoft.AspNetCore.Identity
@using bytme.Models;
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
    var user = await userManager.GetUserAsync(User);
}
<div>
    <h3>Change your account settings</h3>
    <hr />
    <div class="row">
        <div class="col-md-3">
            <partial name="_ManageNav" />
        </div>
        <div class="col-md-9">
            <div class="row">
                <div class="col-md-6">
                    <h4>@ViewData["Title"]</h4>
                    <partial name="_StatusMessage" for="StatusMessage" />
                    <form id="profile-form" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Username"></label>
                            <input asp-for="Username" class="form-control" disabled placeholder="@user.UserName" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Email"></label>
                            @if (Model.IsEmailConfirmed)
                            {
                                <div class="input-group">
                                    <input asp-for="Input.Email" class="form-control" disabled/>
                                    <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                </div>
                            }
                            else
                            {
                                <input asp-for="Input.Email" class="form-control" disabled/>
                                <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-link">Send verification email</button>
                            }
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.name"></label>
                            @if (user.name != null)
                            {
                                <input asp-for="Input.name" class="form-control" placeholder="@user.name" />
                            }
                            else
                            {
                                <input asp-for="Input.name" class="form-control" placeholder="Name" />
                            }
                            <span asp-validation-for="Input.name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.surname"></label>
                            @if (user.surname != null)
                            {
                                <input asp-for="Input.surname" class="form-control" placeholder="@user.surname" />
                            }
                            else
                            {
                                <input asp-for="Input.surname" class="form-control" placeholder="Surname" />
                            }
                            <span asp-validation-for="Input.surname" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-default">Save</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>