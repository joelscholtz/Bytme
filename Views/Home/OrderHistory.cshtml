@model List<bytme.Models.OrderMain>

<h4>Mijn orders</h4>
<table class="table">
    <thead>
        <tr>
            <th>
                Order NR
            </th>


            <th>Status</th>
            <th>
                Datum aangemaakt
            </th>
        </tr>
    </thead>
    <tbody>
        @for (var i = 0; i < Model.Count; i++)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => Model[i].id)
                </td>
                <td><span style="color:green;">Betaald</span></td>
                <td>
                    @Html.DisplayFor(modelItem => Model[i].dt_created)
                </td>

            </tr>
        }
    </tbody>
</table>
