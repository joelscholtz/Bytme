@model IEnumerable<bytme.Models.Item>

@{
    ViewData["Title"] = "Men";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="btn-group row center-block" role="group">
    <hr />
    <button type="button" class="btn btn-light" style="background-color:#fff;">Blazers</button>
    <button type="button" class="btn btn-light" style="background-color:#fff;">Blouses</button>
    <button type="button" class="btn btn-light" style="background-color:#fff;">Jeans</button>
    <button type="button" class="btn btn-light" style="background-color:#fff;">Laptop Bags</button>
    <button type="button" class="btn btn-light" style="background-color:#fff;">Shirts</button>
    <button type="button" class="btn btn-light" style="background-color:#fff;">Short Coats</button>
    <button type="button" class="btn btn-light" style="background-color:#fff;">Suit Jackets</button>
    <button type="button" class="btn btn-light" style="background-color:#fff;">Suit Pants</button>
    <button type="button" class="btn btn-light" style="background-color:#fff;">Suits</button>
    <button type="button" class="btn btn-light" style="background-color:#fff;">Waist Coats</button>
</div>
<hr />

@foreach (var item in Model)
{
    if (item.gender == "male")
    {
    <div class="col-sm-4 col-md-4 col-lg-4 col-xs-6">
        <div class="thumbnail">
            <img src="@item.photo_url" style="width:200px;height:200px" />
            <div class="caption">
                <h3 class="row text-center">@item.description</h3>
                <p class="row text-center">@item.long_description</p>
                <p class="row text-center"><a href="#" class="btn btn-primary" role="button"><span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span> Add to Cart</a></p>
                <p class="row text-center"><a href="#" class="btn btn-danger" role="button"><span class="glyphicon glyphicon-heart-empty" aria-hidden="true"></span></a></p>
            </div>
        </div>
    </div>
    }
}

